/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	html,
	body {
		@apply h-full w-full;
	}
}

@layer components {
	.notification-error {
		@apply bg-red-200 border border-red-400 text-red-700 px-4 py-3 rounded;
	}

	.notification-success {
		@apply bg-green-200 border border-green-400 text-green-700 px-4 py-3 rounded;
	}
}
